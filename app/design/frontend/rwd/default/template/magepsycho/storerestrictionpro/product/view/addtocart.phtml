<?php
$helper               = Mage::helper('magepsycho_storerestrictionpro');
$hideAddToCartText    = $helper->getConfig()->getAccessibleHideAddToCartText();
$hideAddToCartLink    = $helper->getConfig()->getAccessibleHideAddToCartLink();
$onclickAction        = '';
if (!empty($hideAddToCartLink)) {
    $hideAddToCartLink       = $this->getUrl(trim($hideAddToCartLink, '/'));
    $onclickAction           = sprintf('onclick="setLocation(\'%s\')"', $hideAddToCartLink);
}
?>
<?php if (!empty($hideAddToCartText)): ?>
<div class="add-to-cart">
    <div class="add-to-cart-buttons">
        <button type="button" title="<?php echo $this->escapeHtml($hideAddToCartText) ?>" class="button btn-cart-restriction" <?php echo $onclickAction ?>><span><span><?php echo $hideAddToCartText ?></span></span></button>
    </div>
</div>
<?php endif; ?>