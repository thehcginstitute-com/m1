<?xml version='1.0'?>
<layout version='0.1.0'>
	<default>
		<reference name='left'>
			<block type='newsletter/subscribe' name='newsletter' as='newsletter' template='newsletter/subscribe.phtml'/>
		</reference>
		<reference name='right'>
			<block type='newsletter/subscribe' name='newsletter' as='newsletter' template='newsletter/subscribe.phtml'/>
		</reference>
	</default>
	<customer_account>
		<reference name='sidebar'>
			<action method='addLink' module='newsletter'>
				<label>Newsletter Subscriptions</label>
				<name>newsletter</name>
				<path>newsletter/manage/</path>
			</action>
		</reference>
	</customer_account>
	<newsletter_manage_index >
		<label>Customer My Account Newsletter Subscriptions</label>
		<update handle='customer_account'/>
		<reference name='my.account.wrapper'>
			<block type='customer/newsletter' name='customer_newsletter'>
				<block type='page/html_wrapper' name='customer.newsletter.form.before' as='form_before' >
					<label>Newsletter Subscription Form Before</label>
					<action method='setMayBeInvisible'>
						<value>1</value>
					</action>
				</block>
			</block>
		</reference>
	</newsletter_manage_index>
</layout>