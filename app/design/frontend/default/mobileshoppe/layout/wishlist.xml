<?xml version='1.0'?>
<!-- 2024-09-14 Dmitrii Fediuk https://upwork.com/fl/mage2pro
"The names of arguments in `<action method="<methodName>">` calls should match the `methodName`'s arguments":
https://github.com/thehcginstitute-com/m1/issues/680 -->
<layout>
	<default>
		<reference name='top.links'>
			<block name='wishlist_link' type='wishlist/links'/>
			<action method='addLinkBlock'>
<!-- 2024-09-13 Dmitrii Fediuk https://upwork.com/fl/mage2pro
"The names of arguments in `<action method="<methodName>">` calls should match the `methodName`'s arguments":
https://github.com/thehcginstitute-com/m1/issues/680 -->
				<name>wishlist_link</name>
			</action>
		</reference>
		<reference name='left'>
			<block
				after='cart_sidebar'
				as='wishlist'
				name='wishlist_sidebar'
				template='wishlist/sidebar.phtml'
				type='wishlist/customer_sidebar'
			/>
		</reference>
	</default>
	<customer_account>
		<reference name='customer_account_navigation'>
			<action ifconfig='wishlist/general/active' method='addLink' module='wishlist'>
				<label>My Wishlist</label>
				<name>wishlist</name>
				<path>wishlist/</path>
			</action>
		</reference>
	</customer_account>
	<customer_account_index>
		<reference name='right'>
			<action method='unsetChild'>
				<name>wishlist</name>
			</action>
		</reference>
	</customer_account_index>
	<wishlist_index_index >
		<label>Customer My Account My Wishlist</label>
		<update handle='customer_account'/>
		<reference name='my.account.wrapper'>
			<block name='customer.wishlist' template='wishlist/view.phtml' type='wishlist/customer_wishlist'>
				<action method='setTitle'>
					<title>My Wishlist</title>
				</action>
				<block as='items' name='customer.wishlist.items' template='wishlist/item/list.phtml'
					   type='wishlist/customer_wishlist_items'>
					<block name='customer.wishlist.item.image' template='wishlist/item/column/image.phtml'
						   type='wishlist/customer_wishlist_item_column_image'/>
					<block name='customer.wishlist.item.info' template='wishlist/item/column/info.phtml'
						   type='wishlist/customer_wishlist_item_column_comment'>
						<action method='setTitle'>
							<title>Product Details and Comment</title>
						</action>
					</block>
					<block name='customer.wishlist.item.cart' template='wishlist/item/column/cart.phtml'
						   type='wishlist/customer_wishlist_item_column_cart'>
						<action method='setTitle'>
							<title>Add to Cart</title>
						</action>
						<block name='customer.wishlist.item.options' type='wishlist/customer_wishlist_item_options'/>
					</block>
					<block name='customer.wishlist.item.remove' template='wishlist/item/column/remove.phtml'
						   type='wishlist/customer_wishlist_item_column_remove'/>
				</block>
				<block as='control_buttons' name='customer.wishlist.buttons' type='core/text_list'>
					<block name='customer.wishlist.button.share' template='wishlist/button/share.phtml'
						   type='wishlist/customer_wishlist_button'/>
					<block name='customer.wishlist.button.toCart' template='wishlist/button/tocart.phtml'
						   type='wishlist/customer_wishlist_button'/>
					<block name='customer.wishlist.button.update' template='wishlist/button/update.phtml'
						   type='wishlist/customer_wishlist_button'/>
				</block>
			</block>
		</reference>
		<reference name='right'>
			<action method='unsetChild'>
				<name>wishlist_customer_sidebar</name>
			</action>
		</reference>
	</wishlist_index_index>
	<wishlist_index_share >
		<label>Customer My Account Wishlist Sharing Form</label>
		<update handle='customer_account'/>
		<reference name='my.account.wrapper'>
			<block name='wishlist.sharing' template='wishlist/sharing.phtml' type='wishlist/customer_sharing'/>
		</reference>
		<reference name='right'>
			<action method='unsetChild'>
				<name>wishlist_customer_sidebar</name>
			</action>
		</reference>
	</wishlist_index_share>
	<wishlist_index_configure >
		<label>Configure Wishlist Item</label>
		<update handle='catalog_product_view'/>
		<reference name='product.info'>
			<block as='addto' name='product.info.addto' template='wishlist/item/configure/addto.phtml'
				   type='wishlist/item_configure'/>
		</reference>
		<reference name='product.info.options.wrapper.bottom'>
			<action method='unsetChild'><name>product.info.addto</name></action>
			<action method='append'><block>product.info.addto</block></action>
		</reference>
	</wishlist_index_configure>
	<wishlist_shared_index >
		<label>Customer Shared Wishlist View</label>
		<reference name='content'>
			<block name='customer.wishlist' template='wishlist/shared.phtml' type='wishlist/share_wishlist'/>
		</reference>
	</wishlist_shared_index>
</layout>