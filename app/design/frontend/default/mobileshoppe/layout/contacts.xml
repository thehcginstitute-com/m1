<?xml version='1.0'?>
<layout version='0.1.0'>
	<default>
		<reference name='footer_links'>
			<action ifconfig='contacts/contacts/enabled' method='addLink' module='contacts' translate='label title'>
				<label>Contact Us</label>
				<prepare>true</prepare>
				<title>Contact Us</title>
				<url>contacts</url>
			</action>
		</reference>
	</default>
	<contacts_index_index >
		<label>Contact Us Form</label>
		<reference name='head'>
			<action method='setTitle' module='contacts'>
				<title>Contact Us</title>
			</action>
		</reference>
		<reference name='root'>
			<action method='setTemplate'>
				<template>page/2columns-left.phtml</template>
			</action>
			<action method='setHeaderTitle' module='contacts'>
				<title>Contact Us</title>
			</action>
		</reference>
		<reference name='content'>
			<block name='contactForm' template='contacts/form.phtml' type='core/template'/>
		</reference>
	</contacts_index_index>
</layout>