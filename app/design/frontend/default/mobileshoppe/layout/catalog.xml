				<action method='bindPager'><pager>seo.sitemap.pager.top</pager></action>
				<action method='bindPager'><pager>seo.sitemap.pager.bottom</pager></action>
				<action method='setItemsTitle' module='catalog' translate='title'><title>products</title></action>
			</block>
		</reference>
		<reference name='seo.sitemap.links'>
			<action method='addLink' module='catalog' translate='label title'>
				<label>Categories Sitemap</label>
				<title>Categories Sitemap</title>
				<url helper='catalog/map/getCategoryUrl'/>
