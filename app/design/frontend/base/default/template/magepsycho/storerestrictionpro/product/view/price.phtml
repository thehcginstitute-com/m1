<?php
$helper           = Mage::helper('magepsycho_storerestrictionpro');
$hidePriceText    = $helper->cfgH()->getAccessibleHideProductPriceText();
$hidePriceLink    = $helper->cfgH()->getAccessibleHideProductPriceLink();
$displayPriceHtml = $hidePriceText;
if (!empty($hidePriceLink)) {
    $redirectUrl      = $this->getUrl(trim($hidePriceLink, '/'));
    $displayPriceHtml = sprintf('<a href="%s" title="%s">%s</a>', $redirectUrl, $hidePriceText, $hidePriceText);
}
echo $displayPriceHtml;