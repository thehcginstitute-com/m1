	</default>
	<allreviews_index_index>
		<reference name='root'>
			<action method='setTemplate'><template>page/1column.phtml</template></action>
		</reference>
		<reference name='content'>
			<block name='all_reviews' template='allreviews/reviews.phtml' type='allreviews/allreviews'/>
		</reference>
	</allreviews_index_index>
</layout>