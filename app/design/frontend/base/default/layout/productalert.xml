<?xml version='1.0'?>
<!-- 2024-09-14 Dmitrii Fediuk https://upwork.com/fl/mage2pro
"The names of arguments in `<action method="<methodName>">` calls should match the `methodName`'s arguments":
https://github.com/thehcginstitute-com/m1/issues/680 -->
<layout>
	<catalog_product_view>
		<reference name='content'>
			<reference name='product.info'>
				<reference name='alert.urls'>
					<block
						as='productalert_price'
						name='productalert.price'
						template='productalert/product/view.phtml'
						type='productalert/product_view'
					>
						<action method='preparePriceAlertData'/>
						<action method='setHtmlClass'>
							<value>alert-price link-price-alert</value>
						</action>
						<action method='setSignupLabel'>
							<value>Sign up for price alert</value>
						</action>
					</block>
					<block
						as='productalert_stock'
						name='productalert.stock'
						template='productalert/product/view.phtml'
						type='productalert/product_view'
					>
						<action method='prepareStockAlertData'/>
						<action method='setHtmlClass'>
							<value>alert-stock link-stock-alert</value>
						</action>
						<action method='setSignupLabel'>
							<value>Sign up to get notified when this product is back in stock</value>
						</action>
					</block>
				</reference>
			</reference>
		</reference>
	</catalog_product_view>
</layout>