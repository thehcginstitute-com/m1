				<action method='setImgWidth'><v>226</v></action>
			</block>
		</reference>
	</adminhtml_index_login>
	<adminhtml_index_forgotpassword>
		<reference name='form.additional.info'>
			<block name='captcha' type='captcha/captcha'>
				<action method='setFormId'><v>backend_forgotpassword</v></action>
				<action method='setImgHeight'><v>50</v></action>
				<action method='setImgWidth'><v>226</v></action>
			</block>
		</reference>
	</adminhtml_index_forgotpassword>
