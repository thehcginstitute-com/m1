<!-- 2024-09-13 Dmitrii Fediuk https://upwork.com/fl/mage2pro
"Refactor the `<layout>` XML files": https://github.com/thehcginstitute-com/m1/issues/681 -->
<layout>
	<adminhtml_sales_order_create_load_block_data>
		<reference name='data'>
			<block
				name='top.actions'
				template='iwd/admincheckout/create/top.phtml'
				type='iwd_admin_checkout/adminhtml_sales_order_create_top'
			>
				<block
					name='store.switcher'
					template='iwd/admincheckout/create/store/switcher.phtml'
					type='iwd_admin_checkout/adminhtml_sales_order_create_store_switcher'
				>
					<action method='setStoreVarName'>
						<var_name>store_ids</var_name>
					</action>
				</block>
			</block>
		</reference>
	</adminhtml_sales_order_create_load_block_data>
	<adminhtml_sales_order_create_index>
		<reference name='head'>
			<action ifconfig='iwd_ordermanager/crate_process/enable' method='addItem'>
				<name>iwd/admincheckout/create.css</name>
				<type>skin_css</type>
			</action>
			<action ifconfig='iwd_ordermanager/crate_process/enable' method='addItem'>
				<name>iwd/admincheckout/mage/adminhtml/sales.js</name>
				<type>js</type>
			</action>
		</reference>
		<reference name='form'>
			<block
				name='top_actions'
				template='iwd/admincheckout/create/top.phtml'
				type='iwd_admin_checkout/adminhtml_sales_order_create_top'
			>
				<block
					name='store.switcher'
					template='iwd/admincheckout/create/store/switcher.phtml'
					type='iwd_admin_checkout/adminhtml_sales_order_create_store_switcher'
				>
					<action method='setStoreVarName'>
						<var_name>store_ids</var_name>
					</action>
				</block>
			</block>
		</reference>
	</adminhtml_sales_order_create_index>
</layout>