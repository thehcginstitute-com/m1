<?xml version='1.0'?>
<layout>
	<default>
		<reference name='head'>
			<!-- 2024-09-07 Dmitrii Fediuk https://upwork.com/fl/mage2pro
			'The names of arguments in `<action method='<methodName>'>` calls should match the `methodName`'s arguments':
			https://github.com/thehcginstitute-com/m1/issues/680 -->
			<action method='addJs'>
				<name>extendware/ewcore/guide.js</name>
			</action>
			<action method='addItem'>
				<name>extendware/ewcore/css/guide.css</name>
				<type>skin_css</type>
			</action>
		</reference>
		<reference name='js'>
			<block after='-' name='ewcore_guide'
				template='extendware/ewcore/page/footer/guide.phtml' type='ewcore/adminhtml_page_footer_guide'/>
			<block after='-' name='ewcore_demo' template='extendware/ewcore/page/footer/demo.phtml' type='core/template'/>
		</reference>
	</default>
	<default>
		<reference name='head'>
			<action method='addItem'>
				<name>extendware/ewcore/css/general.css</name>
				<type>skin_css</type>
			</action>
			<!-- 2024-09-07 Dmitrii Fediuk https://upwork.com/fl/mage2pro
			'The names of arguments in `<action method='<methodName>'>` calls should match the `methodName`'s arguments':
			https://github.com/thehcginstitute-com/m1/issues/680 -->
			<action method='addJs'>
				<name>extendware/ewcore/adminhtml/general.js</name>
			</action>
			<action method='addJs'>
				<name>extendware/ewcore/opentip/opentip-native-excanvas.min.js</name>
			</action>
			<action method='addItem'>
				<name>extendware/ewcore/css/opentip.css</name>
				<type>skin_css</type>
			</action>
		</reference>
		<update ewifhelper='ewcore/layout/isAdminMenuHighlightingEnabled' handle='admin_menu_highlight_handle'/>
		<reference name='notifications'>
			<block acl='system/adminnotification/show_toolbar' after='notification_toolbar'
				name='ewcore_notification_toolbar' template='extendware/ewcore/notification/toolbar.phtml'
				type='ewcore/adminhtml_notification_toolbar'/>
		</reference>
		<reference name='before_body_end'>
			<block after='-' name='ewcore_page_footer_tasks' type='ewcore/adminhtml_page_footer_tasks'/>
		</reference>
	</default>
	<admin_menu_highlight_handle>
		<reference name='head'>
			<action method='addItem'>
				<name>extendware/ewcore/css/menu-highlight.css</name>
				<type>skin_css</type>
			</action>
			<action method='addItem'>
				<name>extendware/ewcore/js/general.js</name>
				<type>skin_js</type>
			</action>
		</reference>
	</admin_menu_highlight_handle>
	<ewcore_chooser>
		<reference name='head'>
			<!-- 2024-09-07 Dmitrii Fediuk https://upwork.com/fl/mage2pro
			'The names of arguments in `<action method='<methodName>'>` calls should match the `methodName`'s arguments':
			https://github.com/thehcginstitute-com/m1/issues/680 -->
			<action method='addJs'>
				<name>mage/adminhtml/wysiwyg/widget.js</name>
			</action>
			<action method='addJs'>
				<name>extendware/ewcore/adminhtml/trim.js</name>
			</action>
			<action method='addJs'>
				<name>prototype/window.js</name>
			</action>
			<!--Magento < 1.7.0 -->
			<action method='addItem'>
				<name>prototype/windows/themes/default.css</name>
				<type>js_css</type>
			</action>
			<action method='addItem'>
				<name>prototype/windows/themes/magento.css</name>
				<type>js_css</type>
			</action>
			<!--Magento > 1.7.0 -->
			<action method='addCss'>
				<name>lib/prototype/windows/themes/magento.css</name>
			</action>
		</reference>
	</ewcore_chooser>
	<!-- <adminhtml_cache_index>
		<reference name='cache.additional'>
			<block type='ewcore/adminhtml_cache_additional_cache' name='cache.additional.ewcore' template='extendware/ewcore/cache/additional/cache.phtml' />
		</reference>
	</adminhtml_cache_index> -->
</layout>