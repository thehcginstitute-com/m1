<?xml version="1.0" ?>
<config>
    <sections>
        <dev>
            <groups>
                <js>
                    <fields>
                        <protocolRelativeUris translate="label comment" module="aoejscsststamp">
                            <label>Protocol relative uris</label>
                            <comment><![CDATA[e.g. http://example.com -> //example.com]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </protocolRelativeUris>
                        <storeMinifiedJsFolder translate="label comment" module="aoejscsststamp">
                            <label>Minified js files folder</label>
                            <comment><![CDATA[Folder to additionally look for minified versions of js files, for example minified/js]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storeMinifiedJsFolder>
                        <lifetime translate="label comment" module="aoejscsststamp">
                            <label>Lifetime</label>
                            <comment><![CDATA[Expires and Cache-Control header lifetimes to be set while uploading to Amazon S3 (will only work with Aoe_AmazonCdn enabled)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lifetime>
                        <storage translate="label" module="aoejscsststamp">
                            <label>Storage</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aoejscsststamp/system_config_source_storage</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storage>
                        <addTstampToJsFiles translate="label comment" module="aoejscsststamp">
                            <label>Add version to assets (js)</label>
                            <comment>
                                <![CDATA[This will add a version key to js files. E.g. http://example.com/script.js -> http://example.com/script.1357433382.js. Please note that the files are not renamed. Check readme.txt for instructions on how to configure mod_rewrite for this feature]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </addTstampToJsFiles>
                        <createHashFromFileContent translate="label comment" module="aoejscsststamp">
                            <label>Create merged filename hash from file content</label>
                            <comment>
                                <![CDATA[If set to Yes, It will create hash of file content instead of file name which is being used in merged filename. Ex. s.9c859d05114b173356af905f073e4d0f.1448397352.js]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </createHashFromFileContent>
                    </fields>
                </js>
                <css>
                    <fields>
                        <protocolRelativeUris translate="label comment" module="aoejscsststamp">
                            <label>Protocol relative uris</label>
                            <comment><![CDATA[e.g. http://example.com -> //example.com]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </protocolRelativeUris>
                        <lifetime translate="label comment" module="aoejscsststamp">
                            <label>Lifetime</label>
                            <comment><![CDATA[Expires and Cache-Control header lifetimes to be set while uploading to Amazon S3 (will only work with Aoe_AmazonCdn enabled)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lifetime>
                        <storage translate="label" module="aoejscsststamp">
                            <label>Storage</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aoejscsststamp/system_config_source_storage</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storage>
                        <addTstampToAssets translate="label comment" module="aoejscsststamp">
                            <label>Add version to assets (gif|png|jpg)</label>
                            <comment>
                                <![CDATA[This will add a version key to the assets linked in your css files. E.g. http://example.com/foo.jpg -> http://example.com/foo.1357433382.jpg. Please note that the files are not renamed. Check readme.txt for instructions on how to configure mod_rewrite for this feature]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </addTstampToAssets>
                        <storeMinifiedCssFolder translate="label comment" module="aoejscsststamp">
                            <label>Minified css files folder</label>
                            <comment><![CDATA[Folder to additionally look for minified versions of css files, for example minified/css]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storeMinifiedCssFolder>
                        <addTstampToCssFiles translate="label comment" module="aoejscsststamp">
                            <label>Add version to assets (css)</label>
                            <comment>
                                <![CDATA[This will add a version key to css files. E.g. http://example.com/styles.css -> http://example.com/styles.1357433382.css. Please note that the files are not renamed. Check readme.txt for instructions on how to configure mod_rewrite for this feature]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </addTstampToCssFiles>
                        <createHashFromFileContent translate="label comment" module="aoejscsststamp">
                            <label>Create merged filename hash from file content</label>
                            <comment>
                                <![CDATA[If set to Yes, it will create hash of file content instead of file name which is being used in merged filename. Ex. s.9c859d05114b173356af905f073e4d0f.1448397352.css]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </createHashFromFileContent>
                        <addStoreIdToHash translate="label comment" module="aoejscsststamp">
                            <label>Add store ID to merged filename hash</label>
                            <comment>
                                <![CDATA[If set to Yes, the merged filename hash will take different store view's into consideration. This might be helpful if you have a multi-store set-up with different base URL's.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </addStoreIdToHash>
                    </fields>
                </css>
                <log>
                    <fields>
                        <aoeJsCssTstampActive translate="label" module="aoejscsststamp">
                            <label>Log Aoe_JsCssTstamp messages</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </aoeJsCssTstampActive>
                    </fields>
                </log>
            </groups>
        </dev>
    </sections>
</config>
